<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leo.i18n.MainActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/activity_main_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hello_world" />

        <Button
            android:id="@+id/activity_main_button_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portuegese"/>
        <Button
            android:id="@+id/activity_main_button_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english"/>
        <Button
            android:id="@+id/activity_main_button_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spanish"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
